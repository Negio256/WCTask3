<%= render 'shared/hdline' %>

<% if @post.user_id == current_user.id %>

<div>
<h2>Editing Book</h2>
</div>
<%= form_for(@post) do |f| %>
<div>
<h4>Title</h4>
<%= f.text_field :title %>
</div>
<div>
<h4>Opinion</h4>
<%= f.text_area :body %>
</div>
<div>
<%= f.submit 'Update Book'%>
</div>
<% end %>

<div>
<%= link_to 'Show', post_path(@post) %>
<%= link_to 'Back',user_path(current_user) %>
</div>

<% else %>
<p> このページを表示することが出来ません。</p>
<%= link_to 'Homeへ戻る',root_path %>

<% end %>

<%= render 'shared/footer' %>