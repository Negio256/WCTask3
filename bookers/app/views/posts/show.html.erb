<%= render 'devise/sessions/hdline' %>
<div class="sidebarbigbox row">
	<%= render 'devise/sessions/sidebar',post: @post, user: @postt.user  %>
<div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 sidebar2">
<table class="bookstablebigbox">
	<h2>Book Detail</h2>
		<thead>
			<tr class="page-header">
				<th class="tables"></th>
				<th class="tables"></th>
				<th class="tables"></th>
				<% if @post.user == current_user %>
				<th class="tables"></th>
				<th class="tables"></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<tr class="tableborder">
				<td> <%= attachment_image_tag @postt.user, :image, :fill, 120, 120, format: 'jpeg', fallback: "no_image.jpg" %><br /><%= link_to @postt.user.name ,user_path(@postt.user) %></td>
				<td><%= link_to @postt.title,post_path(@postt) %></td>
				<td><%= @postt.body %></td>
				<% if @postt.user_id == current_user.id %>
				<td><%= link_to 'Edit',edit_post_path(@postt) ,class:"btn btn-default e-btn" %></td>
				<td><%= link_to 'Destroy', post_path(@postt), method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-default" %></td><% end %>
			</tr>
		</tbody>
	</table>
</div>
</div>

<%= render 'devise/sessions/footer' %>