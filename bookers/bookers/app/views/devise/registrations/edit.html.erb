<%= render 'shared/hdline' %>

<div>
<h2>User info</h2>
<%= form_for( resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
  <%= f.label :Image %><br />
  <%= f.attachment_field:image_id %>
  </div>
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_field :introduction, autocomplete: "Introduction" %>
  </div>
  <div class="actions">
    <%= f.submit "User Update" %>
  <% end %>
  </div>
</div>
<%= render 'shared/footer' %>